= render 'form'
%table{ :style=>"width:100%", :border=>"10", :bordercolor=>"gray" }
  %tr
    %td.sub_header{ :colspan=>"10" } Leaving Requests
  %tr
    %th Created at
    %th Leave from
    %th Leave to
    %th Leave day
    %th Status
    %th Approver
  - @user.leave_requests.each do |lr| 
    %tr
      %td= lr.created_at
      %td= lr.leave_from
      %td= lr.leave_to
      %td= "leave_day"
      %td= lr.request_status.name
      %td= lr.user_approve.full_name
- if current_user.admin?
  = link_to "Edit", edit_user_path(@user)
  - if !current_user?(@user)
    = link_to "Delete", @user, method: :delete, data: {:confirm => "Are you sure?"}
