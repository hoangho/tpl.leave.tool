<h1>Listing leave_requests</h1>

<table>
  <tr>
    <th>Leave type</th>
    <th>Comment</th>
    <th>Leave from</th>
    <th>Leave to</th>
    <th>User request</th>
    <th>User approve</th>
    <th>Is approved</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @leave_requests.each do |leave_request| %>
  <tr>
    <td><%= leave_request.leave_type_id %></td>
    <td><%= leave_request.comment %></td>
    <td><%= leave_request.leave_from %></td>
    <td><%= leave_request.leave_to %></td>
    <td><%= leave_request.user_request_id %></td>
    <td><%= leave_request.user_approve_id %></td>
    <td><%= leave_request.is_approved %></td>
    <td><%= link_to 'Show', leave_request %></td>
    <td><%= link_to 'Edit', edit_leave_request_path(leave_request) %></td>
    <td><%= link_to 'Destroy', leave_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

